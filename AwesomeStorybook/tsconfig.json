{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@types": ["../types.d.ts"]
        },
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": false,
        "target": "es2017",
        "jsxFactory": "h"
    },
    "exclude": ["node_modules"],
    "extends": "expo/tsconfig.base"
}
